{% extends 'base.html.twig' %}

{% block title %} Panier {% endblock %}

{% block body %}
<h1>Contenu du panier </h1>

    {% if panier is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Quantité</th>
                    <th>Prix</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

            {% set prix_total = 0 %}
            {% set prix_qte = 0 %}

                {% for produit in panier %}
                    {% set prix_qte = produit.qte * produit.produit.prix %} 
                    {% set prix_total = prix_total + prix_qte %}
                    <tr>
                        <td>{{produit.produit.nom}}</td>
                        <td>{{produit.qte}}</td>
                        <td>
                        {{prix_qte}} €
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger">
                                <a href="{{ path('panier_delete', {'id':produit.id}) }}">
                                    Supprimer
                                </a>
                            </button>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
            <td class="text-muted" >{{ panier|length }} articles</td>
            <td></td>
            <td class="font-weight-bold" >{{prix_total}} €</td>
        </table>


    {% else %}
        <p>Il n'y a aucun produit au panier</p>
    {% endif %}


{% endblock %}